<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy MM dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="OFF"> <!-- This ensures that application logging doesn't print out into unit tests -->
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="co.adhoclabs.template" level="info" />
</configuration>
